---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title="Ensembles - Backstage">
  <section class="backstage">
    <h1>Backstage</h1>
    <p class="subtitle">Administrative tools and reports</p>

    <nav class="backstage-nav">
      <a href="/backstage/registrations" class="nav-card">
        <Icon name="mdi:clipboard-list" width="48" height="48" />
        <h2>Registrations</h2>
        <p>View students registered for each class</p>
      </a>
      <a href="/backstage/rrule" class="nav-card">
        <Icon name="mdi:calendar-sync" width="48" height="48" />
        <h2>RRule Tester</h2>
        <p>A tool for testing repeating events</p>
      </a>
    </nav>
  </section>
</Layout>

<style>
  .backstage {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .backstage h1 {
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #666;
    margin-bottom: 2rem;
  }

  .backstage-nav {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .nav-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .nav-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .nav-card h2 {
    margin: 1rem 0 0.5rem;
    font-size: 1.25rem;
  }

  .nav-card p {
    margin: 0;
    color: #666;
    font-size: 0.9rem;
  }
</style>

