---
import FullWidthLayout from '../layouts/FullWidthLayout.astro';
---

<FullWidthLayout>
  <div class="homepage">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-image">
        <img 
          src="/heroes/classes.jpg" 
          alt="Students working on art projects together"
          loading="eager"
        />
      </div>
      <div class="hero-content">
        <h1>Affordable Group Music and Art Classes</h1>
        <a href="/activities?kind=class" class="cta-button">
          Sign Up Now <span class="arrow">▶</span>
        </a>
      </div>
    </section>

    <!-- Two Column Section -->
    <section class="two-column">
      <div class="column column-groups">
        <h2>Performance Groups</h2>
        <div class="column-image">
          <img 
            src="/heroes/groups.jpg" 
            alt="Jazz band performing outdoors"
            loading="lazy"
          />
        </div>
        <a href="/activities?kind=group" class="cta-button">
          Join Now <span class="arrow">▶</span>
        </a>
      </div>
      <div class="column column-events">
        <h2>Special Events</h2>
        <div class="column-image">
          <img 
            src="/heroes/events.jpg" 
            alt="Art gallery paint pouring event"
            loading="lazy"
          />
        </div>
        <a href="/activities?kind=event" class="cta-button cta-button-light">
          Learn More <span class="arrow">▶</span>
        </a>
      </div>
    </section>
  </div>
</FullWidthLayout>

<style>
  .homepage {
    margin: 0;
    padding: 0;
  }

  /* Hero Section */
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background: #000;
    min-height: 450px;
  }

  .hero-image {
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-image img {
    max-width: 100%;
    max-height: 380px;
    object-fit: cover;
    border-radius: 4px;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 2rem 3rem;
    gap: 2rem;
  }

  .hero-content h1 {
    color: #fff;
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    font-style: italic;
  }

  /* CTA Button */
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: #000;
    color: #fff;
    padding: 0.875rem 1.5rem;
    font-size: 1.1rem;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 3px solid #fff;
    transition: all 0.2s ease;
  }

  .cta-button:hover {
    background: #fff;
    color: #000;
  }

  .cta-button .arrow {
    font-size: 0.9rem;
  }

  .cta-button-light {
    background: transparent;
    border-color: #fff;
  }

  .cta-button-light:hover {
    background: #fff;
    color: #00a0a0;
  }

  /* Two Column Section */
  .two-column {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .column {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2.5rem 2rem;
    gap: 1.5rem;
  }

  .column h2 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    text-align: center;
  }

  .column-image {
    max-width: 320px;
  }

  .column-image img {
    width: 100%;
    height: auto;
    border-radius: 4px;
  }

  /* Groups Column */
  .column-groups {
    background: #e8e8e8;
  }

  .column-groups h2 {
    color: #000;
  }

  .column-groups .cta-button {
    background: #000;
    color: #fff;
    border-color: #000;
  }

  .column-groups .cta-button:hover {
    background: #333;
    border-color: #333;
  }

  /* Events Column */
  .column-events {
    background: #00b8b8;
  }

  .column-events h2 {
    color: #fff;
    font-style: italic;
  }

  .column-events .cta-button {
    background: transparent;
    color: #fff;
    border-color: #fff;
  }

  .column-events .cta-button:hover {
    background: #fff;
    color: #00b8b8;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .hero-content {
      order: -1;
      padding: 2rem 1.5rem 0;
      align-items: center;
      text-align: center;
    }

    .hero-content h1 {
      font-size: 1.75rem;
    }

    .hero-image {
      position: relative;
      padding: 1rem 1.5rem 2rem;
    }

    .hero-image img {
      max-height: 300px;
      width: 100%;
    }

    .hero .cta-button {
      position: absolute;
      bottom: 3rem;
      right: 2rem;
    }

    .two-column {
      grid-template-columns: 1fr;
    }

    .column {
      padding: 2rem 1.5rem;
    }

    .column h2 {
      font-size: 1.75rem;
    }

    .column-image {
      max-width: 280px;
    }
  }
</style>
