---
import FullWidthLayout from '../layouts/FullWidthLayout.astro';
import { Icon } from 'astro-icon/components';
---

<FullWidthLayout>
  <div class="hero-container">
    <section class="hero-one">
      <h1>Affordable Group Music and Art Classes</h1>
      <div class="hero-image primary">
        <img 
          src="/heroes/classes.jpg" 
          alt="Students working on art projects together"
          loading="eager"
        />
      </div>
      <div class="cta-container">
        <a href="/activities?kind=class" class="cta-button oswald-cta">
          Sign Up Now
          <Icon name="mdi:arrow-right-thick" width="28" height="28" />
        </a>  
      </div>
    </section>
    <section class="hero-two">
      <h1>Performance Groups</h1>
      <div class="hero-image">
        <img 
          src="/heroes/groups.jpg" 
          alt="Jazz band performing outdoors"
          loading="eager"
        />
      </div>
      <a href="/activities?kind=group" class="cta-button oswald-cta">
        Join Now <span class="arrow">▶</span>
      </a>
    </section>
    <section class="hero-three">
      <h1>Special Events</h1>
      <div class="hero-image">
        <img 
          src="/heroes/events.jpg" 
          alt="Art gallery paint pouring event"
          loading="eager"
        />
      </div>
      <a href="/activities?kind=event" class="cta-button oswald-cta">
        Learn More <span class="arrow">▶</span>
      </a>
    </section>
  </div>
</FullWidthLayout>

<style>
  .homepage {
    margin: 0;
    padding: 0;
  }

  /* Hero Section */
  .hero-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 450px;
  }

  .hero-one {
    grid-column: 1 / 3;
    background-color: var(--color-background-secondary);
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 1rem;
  }
  .hero-one h1 {
    color: var(--color-text-secondary);
    padding: 1rem;
  }
  .hero-one .cta-container {
    padding: 1rem;
  }
  .hero-two {

  }

  .hero-image.primary {
    order: -1;
    grid-row: 1/3;
    text-align: center;
  }
  .hero-image.primary img {
    display: block;
    margin: 0 auto;
    max-width: 100%;
    max-height: 500px;
  }

  .hero-container section {
    max-width: 100dvw;
  }
  /* CTA Button */
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: #000;
    color: #fff;
    padding: 0.875rem 1.5rem;
    font-size: 1.1rem;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 3px solid #fff;
    transition: all 0.2s ease;
  }

  .cta-button:hover {
    background: #fff;
    color: #000;
  }

  .cta-button-light {
    background: transparent;
    border-color: #fff;
  }

  .cta-button-light:hover {
    background: #fff;
    color: #00a0a0;
  }

  
  @media (max-width: 648px) {
    .hero-one {
      grid-template-columns: 1fr;
      grid-gap: 0;
    }

    .hero-one h1 {
      text-align: center;
      padding: 0.2em;
      font-size: 1.5rem;
    }
    .hero-one .cta-container {
      text-align: center;
    }
    .hero-image.primary {
      order: unset;
      grid-row: auto;
      margin-top:-1rem;
      margin-bottom:-4rem;
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      min-height: auto;
    }
    .hero-one {
      grid-column: 1 / 2;
    }
  }
</style>
