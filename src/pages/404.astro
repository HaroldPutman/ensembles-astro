---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title="Page Not Found - Ensembles">
  <section class="not-found">
    <div class="icon-container">
      <img src="/image/dissonant.jpg" alt="404 Not Found" />
    </div>
    <h1>Page Not Found</h1>
    <p>Sorry, we couldn't find the page you're looking for.</p>
    <p class="suggestion">It may have been moved or no longer exists.</p>
    <div class="actions">
      <a href="/" class="btn btn-primary oswald-cta">
        <Icon name="mdi:home" width="20" height="20" />
        Go Home
      </a>
      <a href="/activities" class="btn btn-secondary oswald-cta">
        <Icon name="mdi:calendar" width="20" height="20" />
        View Activities
      </a>
    </div>
  </section>
</Layout>

<style>
  .not-found {
    text-align: center;
    padding: 4rem 1rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .icon-container {
    color: var(--color-text-muted, #999);
    margin-bottom: 1.5rem;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--color-text, #333);
  }

  p {
    color: var(--color-text-muted, #666);
    margin-bottom: 0.5rem;
  }

  .suggestion {
    font-size: 0.9rem;
    margin-bottom: 2rem;
  }

  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-button, 4px);
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.2s, transform 0.1s;
    text-transform: uppercase;
  }

  .btn:hover {
    transform: translateY(-1px);
  }

  .btn-primary {
    background: var(--color-primary, #333);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-dark, #222);
  }

  .btn-secondary {
    background: var(--color-secondary, #f5f5f5);
    color: var(--color-text, #333);
    border: 1px solid var(--color-border, #ddd);
  }

  .btn-secondary:hover {
    background: var(--color-secondary-dark, #eee);
  }
</style>
