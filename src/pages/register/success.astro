---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

// Check payment method
const paymentMethod = Astro.url.searchParams.get('method');
const isFree = paymentMethod === 'none';
const isCheck = paymentMethod === 'check';
---

<Layout>
  <section class="success-section">
    <div class="success-content">
      <div class="success-icon">
        <Icon name="mdi:checkbox-marked-circle-outline" width="96" height="96"/>
      </div>
      
      <h1>
        {isFree ? 'Registration Complete!' : 
         isCheck ? 'Registration Submitted!' : 
         'Payment Successful!'}
      </h1>
      <p class="success-message">
        {isFree 
          ? 'Thank you for your registration. Your enrollment has been confirmed!'
          : isCheck
          ? 'Thank you for your registration. Your enrollment will be completed when we receive your check payment.'
          : 'Thank you for your registration. Your payment has been processed successfully.'
        }
      </p>

      <div id="confirmation-code-container" class="confirmation-code">
        <p>Confirmation code: <span class="confirmation-value"></span></p>
      </div>
      
      {isCheck && (
        <div class="check-payment-info">
          <h3>Payment Instructions</h3>
          <p>Please mail your check to:</p>
          <address>
            <strong>Ensembles, Inc.</strong><br/>
            1120 Monroe St.<br/>
            Charlestown, IN
          </address>
          <p class="check-note">
            <strong>Important:</strong> Please include your confirmation code 
            <span class="confirmation-value"></span> or student name on the check memo line.
          </p>
        </div>
      )}
      
      <div class="next-steps">
        <h2>What's Next?</h2>
        <ul>
          <li>You will receive a confirmation email shortly</li>
          <li>Please arrive 10 minutes before your first class</li>
          <li>Bring comfortable clothing for movement</li>
          <li>If you have any questions, please contact us</li>
        </ul>
      </div>
      
      <div class="action-buttons">
        <a href="/activities" class="btn btn-primary">View More Activities</a>
        <a href="/" class="btn btn-secondary">Return Home</a>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Display confirmation code from sessionStorage
  const confirmationCode = sessionStorage.getItem('confirmationCode');
  if (confirmationCode) {
    const codeElements = document.querySelectorAll('.confirmation-value');
    const formatted = confirmationCode.length === 6 
        ? `${confirmationCode.slice(0, 3)}-${confirmationCode.slice(3)}`
        : confirmationCode;
    codeElements.forEach(element => {
      element.textContent = formatted;
    });
    // Clear it from sessionStorage after displaying
    sessionStorage.removeItem('confirmationCode');
  }
</script>

