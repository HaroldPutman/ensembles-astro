<style>
  .footer {
    background-color: #f8f8f8;
    padding: 3rem 0;
    margin-top: 4rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 3fr 1fr;
    gap: 2rem;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-heading {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    color: #333;
  }

  .footer-link {
    color: #333;
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer-link:hover,
  .footer-link:focus {
    color: #666;
    text-decoration: underline;
  }

  .footer-text {
    margin: 0;
    line-height: 1.6;
    color: #333;
  }

  .copyright {
    margin: 0;
    color: #666;
  }

  .legal-links {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .separator {
    color: #666;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .footer {
      padding: 2rem 0;
    }

    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer-section {
      align-items: center;
    }

    .legal-links {
      justify-content: center;
    }
  }

  /* Focus styles for accessibility */
  .footer-link:focus {
    outline: 2px solid #000;
    outline-offset: 2px;
  }
</style> 