---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <section>
    <article class="markdown-content">
      <slot />
    </article>
  </section>
</Layout>

<style>

  .markdown-content p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .markdown-content ul, 
  .markdown-content ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .markdown-content li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .markdown-content a {
    color: #0066cc;
    text-decoration: none;
  }

  .markdown-content a:hover {
    text-decoration: underline;
  }

  /* Mobile styles */
  @media (max-width: 768px) {

    .markdown-content h1 {
      font-size: 2rem;
    }

    .markdown-content h2 {
      font-size: 1.5rem;
    }

    .markdown-content h3 {
      font-size: 1.2rem;
    }
  }
</style> 