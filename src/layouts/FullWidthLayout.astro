---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title = 'Ensembles, Inc.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather:ital,opsz,wght@0,18..144,300..900;1,18..144,300..900&family=Oswald:wght@200..700&family=Public+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <main class="full-width">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --font-primary:
      'Public Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
      Oxygen-Sans, Ubuntu, Cantarell, sans-serif;
    --font-headline:
      'Merriweather', 'Bookman Old Style', 'URW Bookman', 'URW Bookman L',
      'Georgia Pro', Georgia, serif;
    --font-cta:
      'Oswald', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
      Oxygen-Sans, Ubuntu, Cantarell, sans-serif;
    --color-button-primary-background: #2c2e2f;
    --color-button-primary-text: #fafdfe;
    --color-button-primary-border: #6e7071;
    --color-button-primary-hover-background: #6e7071;
    --color-button-primary-hover-text: #fff;
    --color-button-primary-hover-border: #2c2e2f;
    --color-button-primary-disabled-background: #adafb1;
    --color-button-primary-disabled-text: #000;
    --color-button-primary-disabled-border: #838586;
    --color-button-secondary-background: #fafdfe;
    --color-button-secondary-text: #2c2e2f;
    --color-button-secondary-border: #6e7071;
    --color-button-secondary-hover-background: #f0f3f4;
    --color-button-secondary-hover-text: #4e5051;
    --color-button-secondary-hover-border: #6e7071;
    --color-button-secondary-disabled-background: #eceeef;
    --color-button-secondary-disabled-text: #6e7071;
    --color-button-secondary-disabled-border: #eceeef;
    --color-background-primary: #fff;
    --color-background-secondary: #000;
    --color-background-tertiary: #203f9a;
    --color-text-primary: #000;
    --color-text-secondary: #fff;
    --color-text-tertiary: #fff;
    --radius-button: 3px;
    --z-index-dropdown: 1000;
  }

  html {
    font-family: var(--font-primary);
    font-size: 18px;
    -webkit-text-size-adjust: 100%;
    -moz-text-size-adjust: 100%;
    text-size-adjust: 100%;
  }

  body {
    margin: 0;
    padding: 0;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  main.full-width {
    width: 100%;
    padding: 0;
  }

  main.full-width > section {
    width: 100%;
    padding: 2rem 1rem;
  }

  .merriweather-headline {
    font-family: 'Merriweather', serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-variation-settings: 'wdth' 100;
  }
  .oswald-cta {
    font-family: 'Oswald', sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }

  .public-sans-body {
    font-family: 'Public Sans', sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }
  h1 {
    font-family: var(--font-headline);
    font-optical-sizing: auto;
    font-weight: 500;
    font-style: normal;
    font-variation-settings: 'wdth' 100;
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #333;
  }

  h2 {
    font-family: var(--font-headline);
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-variation-settings: 'wdth' 100;
    font-size: 1.75rem;
    color: #333;
    margin: 2rem 0 1rem;
  }

  h3 {
    font-size: 1.25rem;
    color: #444;
    margin: 1.5rem 0 1rem;
  }

  /* box-sizing reset*/
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /* Optional: Improve text rendering */
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }

  @media (max-width: 768px) {
    main.full-width > section {
      padding: 1rem;
    }
    h1 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
  }
</style>
