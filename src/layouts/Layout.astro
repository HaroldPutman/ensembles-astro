---
import FullWidthLayout from './FullWidthLayout.astro';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<FullWidthLayout title={title}>
  <div class="container">
    <slot />
  </div>
</FullWidthLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .container > :global(section) {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  @media (max-width: 768px) {
    .container > :global(section) {
      padding: 1rem;
    }
  }
</style>
